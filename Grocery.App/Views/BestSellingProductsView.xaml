<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grocery.App.Views.BestSellingProductsView"
             Title="Best Selling Products">

    <Grid RowDefinitions="Auto,*" Padding="20">
        <!-- Table Header -->
        <Label Grid.Row="0"
               Text="Top Selling Products Overview"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,0,0,20"/>

        <!-- Table Content -->
        <Grid Grid.Row="1" RowDefinitions="Auto,*">
            <!-- Column Headers -->
            <Grid Grid.Row="0" 
                  ColumnDefinitions="Auto,*,Auto,Auto" 
                  BackgroundColor="#000000" 
                  Padding="10">
                <Label Grid.Column="0" 
                       Text="Rank" 
                       FontAttributes="Bold" 
                       Margin="5,0"/>
                <Label Grid.Column="1" 
                       Text="Product Name" 
                       FontAttributes="Bold" 
                       Margin="5,0"/>
                <Label Grid.Column="2" 
                       Text="Current Stock" 
                       FontAttributes="Bold" 
                       Margin="5,0"/>
                <Label Grid.Column="3" 
                       Text="Total Sold" 
                       FontAttributes="Bold" 
                       Margin="5,0"/>
            </Grid>

            <!-- Table Rows -->
            <CollectionView Grid.Row="1" 
                            ItemsSource="{Binding Products}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto,*,Auto,Auto" 
                              Padding="10">
                            <Label Grid.Column="0" 
                                   Text="{Binding Ranking}" 
                                   VerticalOptions="Center" 
                                   Margin="5,0"/>
                            <Label Grid.Column="1" 
                                   Text="{Binding Name}" 
                                   VerticalOptions="Center" 
                                   Margin="5,0"/>
                            <Label Grid.Column="2" 
                                   Text="{Binding Stock}" 
                                   VerticalOptions="Center" 
                                   Margin="5,0"/>
                            <Label Grid.Column="3" 
                                   Text="{Binding NrOfSells}" 
                                   VerticalOptions="Center" 
                                   Margin="5,0"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label Text="No products found"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </CollectionView.EmptyView>
            </CollectionView>
        </Grid>
    </Grid>
</ContentPage>